@page
@model OpenDHS.Web.Areas.Manage.Pages.Role.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4 mt-4">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between">
                    <div>
                        <i class="fas fa-table me-1"></i>
                        Roles
                    </div>
                    <div>
                        <a asp-page="Create">Create New</a>
                    </div>
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.RoleEntity[0].Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RoleEntity[0].AddedAt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RoleEntity[0].UpdatedAt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RoleEntity[0].DeletedAt)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RoleEntity) {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AddedAt)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UpdatedAt)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DeletedAt)
                                        </td>
                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

