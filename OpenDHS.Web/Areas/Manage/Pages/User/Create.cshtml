@page
@model OpenDHS.Web.Areas.Manage.Pages.User.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
                            <div class="card-body">
                                <form id="registerForm" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                    
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3 mb-md-0">
                                                <input asp-for="UserEntity.Name" class="form-control" placeholder="Enter your first name" />
                                                <label asp-for="UserEntity.Name">First name</label>
                                                <span asp-validation-for="UserEntity.Name" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input asp-for="UserEntity.Lastname" class="form-control" placeholder="Enter your last name" />
                                                <label asp-for="UserEntity.Lastname">Last Name</label>
                                                <span asp-validation-for="UserEntity.Lastname" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="UserEntity.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <label asp-for="UserEntity.Email">Email address</label>
                                        <span asp-validation-for="UserEntity.Email" class="text-danger"></span>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3 mb-md-0">
                                                <input class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                                <label>Password</label>
                                                <span asp-validation-for="UserEntity.PasswordHash" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-floating mb-3 mb-md-0">
                                                <input class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                                <label>Confirm password</label>
                                                <span asp-validation-for="UserEntity.PasswordHash" class="text-danger"></span>
                                            </div>
                                         </div>
                                    </div>
                                   
                                    <div class="mt-4 mb-0">
                                        <div class="d-grid">
                                            <input id="registerSubmit" type="submit" value="Register" class="btn btn-primary btn-block" />
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <div class="card-footer text-center py-3">
                                <a asp-page="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
