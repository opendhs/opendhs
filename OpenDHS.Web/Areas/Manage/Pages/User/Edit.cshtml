@page
@model OpenDHS.Web.Areas.Manage.Pages.User.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Edit</h3></div>
                            <div class="card-body">
                                <form method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="UserEntity.Id" />
                                    <div class="form-floating mb-3">
                                        <input asp-for="UserEntity.Name" class="form-control" />
                                        <label asp-for="UserEntity.Name" class="control-label"></label>
                                        <span asp-validation-for="UserEntity.Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="UserEntity.Lastname" class="form-control" />
                                        <label asp-for="UserEntity.Lastname" class="control-label"></label>
                                        <span asp-validation-for="UserEntity.Lastname" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="UserEntity.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <label asp-for="UserEntity.Email" class="control-label"></label>
                                        <span asp-validation-for="UserEntity.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="UserEntity.PasswordHash" class="form-control"/>
                                        <label asp-for="UserEntity.PasswordHash" class="control-label"></label>
                                        <span asp-validation-for="UserEntity.PasswordHash" class="text-danger"></span>
                                    </div>
                                    <div class="mt-4 mb-0">
                                        <div class="d-grid">
                                            <input type="submit" value="Save" class="btn btn-primary btn-block" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         </main>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
